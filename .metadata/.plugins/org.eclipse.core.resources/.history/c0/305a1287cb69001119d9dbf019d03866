import no.ntnu.fp.net.co.Connection;
import no.ntnu.fp.net.network.Listener;


//Okey.....this is actually a controller, but for now, keep on going
public class Server extends Listener {
	//Fields
	private static int listenPort = 1337;
	private String addressServer = "localhost";
	private InetAddress localAddress;
	//Can use this if i need to broadcast ? 
	private List connectedHosts;
	private BlockingQueue inQueue;
	
	
	private boolean run = true;
	//Constructor
	public Server(){
		super(listenPort);
		inQueue = new LinkedBlockingQueue();
		//server = new NetworkImpl(listenPort);
		//setServer(server);
	}
	
	public void startServer(){
		//Set up the address
		try {
			localAddress = InetAddress.getByName("localhost");
		}catch(UnknownHostException e){
			e.printStackTrace();
		}
		//Start listener thread
		run();
	}

	
	@Override
	void connected(Socket newConnection) {
		// TODO Auto-generated method stub
		// TODO Auto-generated method stub
				System.out.println("What to do with the connections ? ");
				//Start thread
				new ReceiveWorker(newConnection, inQueue).run();
				System.out.println("Finnish");
	}
	
